[Unit]
Description=OpenMiniHub Gateway Service
After=network.target

[Service]
ExecStart=/bin/sh -c '/opt/node/bin/node /home/pi/gateway/gateway.js >> /home/pi/gateway/logs/gateway.sys.log 2>&1'
ExecStop=/bin/kill -s SIGTERM $MAINPID
ExecReload=/bin/kill -s HUP $MAINPID
KillMode=control-group
Restart=always
User=pi
#StandardOutput=syslog
#StandardError=syslog
SyslogIdentifier=opeminihub-gateway
Environment=NODE_ENV=production
WorkingDirectory=/home/pi/gateway/

[Install]
WantedBy=multi-user.target
